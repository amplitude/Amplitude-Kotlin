{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install and Run MainActivity",
			"type": "shell",
			"command": "./gradlew samples:kotlin-android-app:installDebug && adb shell am start -n com.amplitude.android.sample/.MainActivity",
			"group": "build",
			"description": "Installs the debug APK and starts MainActivity",
			"problemMatcher": [
				"$gradle"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Install and Run AdvancedActivity",
			"type": "shell",
